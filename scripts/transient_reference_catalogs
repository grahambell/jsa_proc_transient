from jsa_proc_transient.dr import create_reference_catalog

logging.basicConfig(level=logging.DEBUG)

for (source, filter_, ref_map) in [
        ('IC348',         '850', '000/000204/000204830/IC348_20151222_00019_850_ER1.sdf'),
        ('IC348',         '450', '000/000204/000204829/IC348_20151222_00019_450_ER1.sdf'),
        ('NGC1333',       '850', '000/000204/000204828/NGC1333_20151222_00018_850_ER1.sdf'),
        ('NGC1333',       '450', '000/000204/000204831/NGC1333_20151222_00018_450_ER1.sdf'),
        ('NGC2024',       '850', '000/000206/000206538/NGC2024_20151226_00049_850_ER1.sdf'),
        ('NGC2024',       '450', '000/000206/000206696/NGC2024_20151226_00049_450_ER1.sdf'),
        ('NGC2071',       '850', '000/000206/000206539/NGC2071_20151226_00052_850_ER1.sdf'),
        #('NGC2071',       '450', ''), -- no sources found
        ('OMC23',         '850', '000/000206/000206540/OMC23_20151226_00036_850_ER1.sdf'),
        ('OMC23',         '450', '000/000206/000206697/OMC23_20151226_00036_450_ER1.sdf'),
        ('OPH_CORE',      '850', '000/000206/000206541/OPH_CORE_20160115_00084_850_ER1.sdf'),
        ('OPH_CORE',      '450', '000/000206/000206615/OPH_CORE_20160115_00084_450_ER1.sdf'),
        ('SERPENS_MAIN',  '850', '000/000206/000206548/SERPENS_MAIN_20160202_00054_850_ER1.sdf'),
