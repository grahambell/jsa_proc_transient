        ('SERPENS_SOUTH', '850', '000/000206/000206547/SERPENS_SOUTH_20160202_00058_850_ER1.sdf'),
        ('SERPENS_SOUTH', '450', '000/000206/000206622/SERPENS_SOUTH_20160202_00058_450_ER1.sdf'),
